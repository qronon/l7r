<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>
        %-4relative [%thread] %-5level %logger - %msg%n
      </pattern>
    </encoder>
  </appender>

  <logger name="org.qrone.l7r" level="DEBUG"/>
  
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>